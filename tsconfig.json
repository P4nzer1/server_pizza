{
    "compilerOptions": {
      "target": "ES2020",                     
      "module": "commonjs",                    
      "strict": true,                          
      "esModuleInterop": true,                 
      "skipLibCheck": true,                   
      "outDir": "./dist",                      
      "rootDir": "./src",                      
      "resolveJsonModule": true,               
      "baseUrl": "./",                         
      "typeRoots": ["./node_modules/@types","./src/types"]   
    },
    "include": ["src/**/*"],                   
    "exclude": ["node_modules", "dist"]        
}